<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvConditions"
            android:text="Conditions"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etConditions"
            android:hint="Conditions"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

        <TextView
            android:id="@+id/tvAllergies"
            android:text="Allergies"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etAllergies"
            android:hint="Allergies"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

        <TextView
            android:id="@+id/tvMedications"
            android:text="Medications"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etMedications"
            android:hint="Medications"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

        <Button
            android:id="@+id/btnSave"
            android:text="Save Record"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

    </LinearLayout>
</ScrollView>